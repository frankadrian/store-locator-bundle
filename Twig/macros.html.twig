
{% macro map() %}
    <div id="map" style="width: 100%; height: 80%; min-height: 400px; min-width: 400px;"></div>
{% endmacro %}

{% macro input() %}
    <div>
        <label for="">Click on the map to search in that area</label>
        <br/>
        <label for="addressInput">Address:</label>
        <input type="text" id="addressInput" size="10"/>

        <label for="radiusSelect">Radius:</label>
        <select id="radiusSelect">
            <option value="25">25mi</option>
            <option value="100">100mi</option>
            <option value="200">200mi</option>
            <option value="2000">2000mi</option>
            <option value="20000" selected>20000mi</option>
        </select>
        <input type="button" id="search" value="Search"/>
    </div>
{% endmacro %}